<Window x:Class="Variant_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Variant_3"
        mc:Ignorable="d"
        Title="Вариант 3" Height="350" Width="525">
    <Grid>
        <ToolBar Grid.Row="0" VerticalAlignment="Top" Padding="10" Background="Pink">
            <Label Content="Search" HorizontalAlignment="Center" FontSize="16" Margin="5"/>
            <TextBox x:Name="input" Width="320" Margin="0,5" FontSize="16"/>
            <Button Content="Стререть" BorderBrush="Black" Background="White" Width="82" Margin="15,10" FontSize="14"/>
        </ToolBar>
    </Grid>
</Window>
